{
	"name": "cohs-results-backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "npx @biomejs/biome format --write",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main.js",
		"db:migrate": "prisma db push --accept-data-loss",
		"db:seed": "npx ts-node -r tsconfig-paths/register src/prisma/seeders/main.ts",
		"db:seed:prod": "node dist/prisma/seeders/main.js",
		"lint": "npx @biomejs/biome lint --write",
		"postinstall": "npm run db:migrate && npm run build && npm run db:seed:prod",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.1",
		"@nestjs/core": "^11.0.1",
		"@nestjs/jwt": "^11.0.1",
		"@nestjs/mapped-types": "*",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/schedule": "^6.0.1",
		"@nestjs/swagger": "^11.2.0",
		"@prisma/client": "^6.16.2",
		"argon2": "^0.44.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"dotenv": "^17.2.2",
		"envalid": "^8.1.0",
		"expr-eval": "^2.0.2",
		"fast-csv": "^5.0.5",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"pg-boss": "^12.5.2",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"smtpexpress": "^0.0.15",
		"xlsx": "^0.18.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@types/brotli": "^1.3.4",
		"@types/express": "^5.0.0",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/multer": "^2.0.0",
		"@types/node": "^22.10.7",
		"@types/passport-jwt": "^4.0.1",
		"@types/pg": "^8.15.5",
		"@types/supertest": "^6.0.2",
		"globals": "^16.0.0",
		"jest": "^30.0.0",
		"prisma": "^6.16.2",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.20.5",
		"typescript": "^5.7.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "src/coverage",
		"testEnvironment": "node"
	}
}
